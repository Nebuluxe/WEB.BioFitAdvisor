@{
    ViewData["Title"] = "Home Page";
}

<style>
    *{
        color: white
    }
    .chart-container {
        margin-bottom: 10px;
        box-shadow: 0px 8px 28px -9px rgba(0,0,0,0.15);
        padding: 10px;
        background: #181d1f;
        border-radius: 0;
        width: 100%;
        height: 300px;
    }

    .card{
        border: 0;
        box-shadow: 0px 8px 28px -9px rgba(0,0,0,0.15);
        border-radius: 0;
        height: 146px;
    }

    .card-header{
        border: 0;
        background: #610588;
        color: white;
        border-radius: 0 !important;
    }

    .card-body{
        background: #181d1f;
    }
</style>

<div class="container-section">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <!-- Card 1 -->
                <div class="col-lg-2" style="padding: 0;padding-right: 10px;">
                    <div class="card text-bg-primary mb-2">
                        <div class="card-header"></div>
                        <div class="card-body">
                            <h5 class="card-title">Total de Ingresos</h5>
                            <p class="card-text">120,000 USD</p>
                        </div>
                    </div>
                </div>

                <!-- Card 2 -->
                <div class="col-lg-2" style="padding: 0;padding-right: 10px;">
                    <div class="card text-bg-success mb-2">
                        <div class="card-header"></div>
                        <div class="card-body">
                            <h5 class="card-title">Total Usuarios</h5>
                            <p class="card-text">450</p>
                        </div>
                    </div>
                </div>

                <!-- Card 3 -->
                <div class="col-lg-2" style="padding: 0;padding-right: 10px;">
                    <div class="card text-bg-warning mb-2">
                        <div class="card-header"></div>
                        <div class="card-body">
                            <h5 class="card-title">Suscripciónes Vigentes</h5>
                            <p class="card-text">1380</p>
                        </div>
                    </div>
                </div>

                <!-- Card 4 -->
                <div class="col-lg-2" style="padding: 0;padding-right: 10px;">
                    <div class="card text-bg-danger mb-2">
                        <div class="card-header"></div>
                        <div class="card-body">
                            <h5 class="card-title">Suscripciónes Canceladas</h5>
                            <p class="card-text">256</p>
                        </div>
                    </div>
                </div>

                <!-- Card 5 -->
                <div class="col-lg-2" style="padding: 0;padding-right: 10px;">
                    <div class="card text-bg-info mb-2">
                        <div class="card-header"></div>
                        <div class="card-body">
                            <h5 class="card-title">Total Descargas App</h5>
                            <p class="card-text">2380</p>
                        </div>
                    </div>
                </div>

                <!-- Card 6 -->
                <div class="col-lg-2" style="padding: 0;padding-right: 0px;">
                    <div class="card text-bg-light mb-2">
                        <div class="card-header"></div>
                        <div class="card-body">
                            <h5 class="card-title">Total Reseñas</h5>
                            <p class="card-text">25</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <!-- Contenedor para gráficos -->
            <div class="row">
                <div class="col-lg-6" style="padding: 0; padding-right: 10px;">
                    <div id="chartContainer" class="chart-container" ></div>
                </div>
                <div class="col-lg-6" style="padding: 0; padding-right: 10px;">
                    <div id="chartContainer2" class="chart-container" ></div>
                </div>
                <div class="col-lg-6" style="padding: 0; padding-right: 10px;">
                    <div id="chartContainer3" class="chart-container" ></div>
                </div>
                <div class="col-lg-6" style="padding: 0; padding-right: 10px;">
                    <div id="chartContainer4" class="chart-container" ></div>
                </div>
            </div>
        </div>

        <div class="col-lg-5" style="padding: 0;">
            <div id="worldMapChart" class="chart-container" style="height: 98%;"></div>
        </div>

        <!-- Tabla AG-Grid de Suscripciones -->
        <h5>Detalles de Suscripciones</h5>
        <div id="subscriptionTable" class="ag-theme-alpine-dark" style="height: 400px; width: 100%;"></div>
    </div>
</div>

@section scripts {
    <script src="~/js/Home/Index.js"></script>
}