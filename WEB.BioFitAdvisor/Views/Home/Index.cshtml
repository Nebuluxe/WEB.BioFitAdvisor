@{
    ViewData["Title"] = "Home Page";
}

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .dashboard-title {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .col {
        flex: 1;
        min-width: 300px;
        padding: 15px;
    }

    .card {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
        color: #fff;
        background: linear-gradient(135deg, #6b73ff 0%, #000dff 100%);
    }

    .card-title {
        font-size: 20px;
        margin-bottom: 10px;
        color: #fff;
    }

    .card-value {
        font-size: 36px;
        font-weight: bold;
    }

    #chart1, #chart2, #chart3, #chart4, #chart5 {
        width: 100%;
        height: 400px;
        margin-top: 20px;
    }

    .footer {
        text-align: center;
        margin-top: 50px;
        color: #777;
    }

    .progress-bar {
        height: 10px;
        border-radius: 5px;
        background-color: #4caf50;
        overflow: hidden;
        margin-top: 15px;
    }

    .progress-bar-inner {
        height: 100%;
        background-color: #00e676;
        width: 75%; /* Example dynamic value */
    }
</style>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-title">Total Workouts</div>
                <div class="card-value">120</div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-title">Calories Burned</div>
                <div class="card-value">3500 kcal</div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-title">Active Days</div>
                <div class="card-value">28</div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-title">Sleep Quality</div>
                <div class="card-value">85%</div>
                <div class="progress-bar">
                    <div class="progress-bar-inner"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div id="chart1"></div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div id="chart2"></div>
        </div>
        <div class="col">
            <div id="chart3"></div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div id="chart4"></div>
        </div>
        <div class="col">
            <div id="chart5"></div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/Home/Index.js"></script>
}