@using System.Collections.Generic
@using API.BioFitAdvisor.Domain
@model API.BioFitAdvisor.Domain.Routine

@{
    ViewData["Title"] = "Eliminar Rutina";
}

<h4 class="header-view">@ViewData["Title"]</h4>

<div class="container-section">
    <h3>¿Estás seguro que deseas eliminar a este usuario?</h3>

    <div>
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Descripción</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Fecha de Inicio</dt>
            <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-2">Fecha de Fin</dt>
            <dd class="col-sm-10">@Model.EndDate.ToString("yyyy-MM-dd")</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="RoutineId" />
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>