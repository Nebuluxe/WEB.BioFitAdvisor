@using System.Collections.Generic
@using API.BioFitAdvisor.Domain
@model API.BioFitAdvisor.Domain.User

@{
    ViewData["Title"] = "Detalles de Usuario";
}

<h4 class="header-view">@ViewData["Title"]</h4>

<div class="container-section">
    <div>
        <h4>@Model.FirstName @Model.LastName</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                Teléfono
            </dt>
            <dd class="col-sm-10">
                @Model.Phone
            </dd>
        </dl>
    </div>
    <div class="mt-3">
        <a asp-action="CreateOrEdit" class="btn btn-secondary">Volver a la Lista</a>
    </div>
</div>