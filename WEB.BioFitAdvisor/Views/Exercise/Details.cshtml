@using System.Collections.Generic
@using API.BioFitAdvisor.Domain
@model API.BioFitAdvisor.Domain.Exercise

@{
    ViewData["Title"] = "Detalles de Ejercicio";
}

<h4 class="title-master">@ViewData["Title"]</h4>

<div class="container-section">
    <div>
        <h4>Ejercicio</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.ExerciseName</dd>

            <dt class="col-sm-2">Descripción</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Categoría</dt>
            <dd class="col-sm-10">@Model.Category</dd>

            <dt class="col-sm-2">URL del Video</dt>
            <dd class="col-sm-10"><a href="@Model.VideoUrl" target="_blank">@Model.VideoUrl</a></dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ExerciseId" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>